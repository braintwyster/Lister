<div class="container" id="_new_company">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    	<h3 class="panel-title">Enter Company Details</h3>
			    	{{#if errors}}
			    		{{#each errors}}
			    			<div class="alert alert-danger">
			    				{{msg}}
			    			</div>
			    		{{/each}}
			    	{{/if}}
			 	</div>
			 	<div class="panel-body">
					<form role="form" action="/company" method="post">
	    				<div class="form-group">
	                		<input type="text" name="company_name" id="company_name" class="form-control input-sm" placeholder="Company Name" value="{{#if fields}}{{fields.name}}{{/if}}" >
	    				</div>
	    				<div class="form-group">
	                		<input type="text" name="location" id="location" class="form-control input-sm" placeholder="Loction" value="{{#if fields}}{{fields.location}}{{/if}}">
	    				</div>
			    		<div class="form-group">
			    			<input type="text" name="phone" id="phone" class="form-control input-sm" placeholder="Phone Number" value="{{#if fields}}{{fields.phone}}{{/if}}">
			    		</div>
			    			<input type="submit" value="Add Company" class="btn btn-success btn-block">
			    	</form>
			    </div>
			</div>
		</div>
	</div>
</div>