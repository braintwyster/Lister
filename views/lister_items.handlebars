<div class="container" id="_new_lister">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    	<h3 class="panel-title">Add An Item To Lister</h3>
			    	{{#if errors}}
			    		{{#each errors}}
			    			<div class="alert alert-danger">
			    				{{msg}}
			    			</div>
			    		{{/each}}
			    	{{/if}}
			 	</div>
			 	<div class="panel-body" id="_adding_items">
			    	<form role="form" action="/listers/items" method="post" id="_adding_item_form">
			    		<input type="hidden" name="lid" value="{{lid}}">
	    				<div class="form-group">
				    		<input type="text" name="name" class="form-control" placeholder="Name of item" value="{{#if fields}}{{#each fields}}{{#ifEq name 'name' ''}}{{value}}{{/ifEq}}{{/each}}{{/if}}"> 

				    	</div>
	    				<div class="form-group">
				    		<input type="text" name="description" class="form-control" placeholder="Description of item" value="{{#if fields}}{{#each fields}}{{#ifEq name 'description' ''}}{{value}}{{/ifEq}}{{/each}}{{/if}}"> 
				    	</div>
				    	<div class="form-group">
				    		{{#if selects}}{{selects}}{{/if}}
				    	</div>
				    	<div class="form-group ">
						    <a href="#" id="_add_attr_btn" class="btn btn-primary{{#if noAdd}} hide{{/if}}">+</a>
						    <span class="_a_thing {{#if noAdd}}hide{{/if}}">Add Attribute</span>
		    			    <input type="submit" value="Create Item" class="btn btn-success pull-right">
		    			</div>
		    			<hr>
				    	<div class="form-group">
		    			    <div id="_attr_choice">
		    			    	<select class="form-control" id="_attr_choice_selector"></select>
		    			    	<hr>
		    			    	<select class="form-control" id="_attr_choice_data"></select>

		    			    	<button id="_pick_new_attr" class="btn btn-success">Add Attribute</button>
		    			    </div>
		    			    <hr>
		    			    <div id="_attrs">
		    			    	{{#if fields}}
		    			    		{{#each fields}}
		    			    			{{#ifEq name 'name' 'description'}}
		    			    				{{!-- return nothing --}}
		    			    			{{else}}
			    			    			<input type="{{type}}" name="{{name}}" value="{{value}}" placeholder="{{name}}" class="form-control _attr_input">
		    			    			{{/ifEq}}
		    			    		{{/each}}
		    			    	{{/if}}
		    			    </div>
		    			</div>
		    		</form>
		    	</div>
    		</div>
		</div>
	</div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/user_lister_item.io.js"></script>