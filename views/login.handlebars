<div class="container" id="_registration">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    	<h3 class="panel-title">Login</h3>
			    	{{#if errors}}
			    		{{#each errors}}
			    			<div class="alert alert-danger">
			    				{{msg}}
			    			</div>
			    		{{/each}}
			    	{{/if}}
			 	</div>
			 	<div class="panel-body">
			    	<form role="form" action="/users/login" method="post">
	    				<div class="form-group">
	                		<input type="text" name="username" id="username" class="form-control input-sm" placeholder="Username or Email" value="{{#if fields}}{{fields.username}}{{/if}}">
	    				</div>
			    		<div class="form-group">
	    					<input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
	    				</div>
	    			    <input type="submit" value="Login" class="btn btn-success btn-block">
			    		<a href="/users/register" class="btn btn-primary btn-block">Register</a>
		    		</form>
		    	</div>
    		</div>
		</div>
	</div>
</div>