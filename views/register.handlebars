<div class="container" id="_registration">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    	<h3 class="panel-title">Register</h3>
			    	{{#if errors}}
			    		{{#each errors}}
			    			<div class="alert alert-danger">
			    				{{msg}}
			    			</div>
			    		{{/each}}
			    	{{/if}}
			 	</div>
			 	<div class="panel-body">
			    	<form role="form" action="/users/register" method="post">
	    				<div class="form-group">
	                		<input type="text" name="name" id="name" class="form-control input-sm" placeholder="Name" value="{{#if fields}}{{fields.name}}{{/if}}">
	    				</div>
	    				<div class="form-group">
	                		<input type="text" name="username" id="username" class="form-control input-sm" placeholder="Username" value="{{#if fields}}{{fields.username}}{{/if}}">
	    				</div>
			    		<div class="form-group">
			    			<input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address" value="{{#if fields}}{{fields.email}}{{/if}}">
			    		</div>
			    		<div class="form-group">
	    					<input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
	    				</div>
	    				<div class="form-group">
	    					<input type="password" name="password2" id="password2" class="form-control input-sm" placeholder="Re-Password">
	    				</div>
	    			    <input type="submit" value="Register" class="btn btn-success btn-block">
			    		
		    		</form>
		    	</div>
    		</div>
		</div>
	</div>
</div>